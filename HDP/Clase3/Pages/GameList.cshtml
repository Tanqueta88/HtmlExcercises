@page
@model Clase3.Pages.GameListModel
@{
}

<h1>Lista de juegos</h1>
<form method="post">
    <div class="mb-3">
        <label for="NewGame.Name" class="form-label"></label>
        <input class="form-control" asp-for="NewGame.Name">
    </div>
    <div class="mb-3">
        <label for="NewGame.Year" class="form-label"></label>
        <input class="form-control" asp-for="NewGame.Year">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


<ol>
    @foreach (var game in Model.Games) 
    {
        <li>@game.Name
            <form method="post" asp-page-handler="Delete" asp-route-name="@game.Name">
                <button class="btn btn-danger">Delete</button>
            </form>
        </li>
    }
</ol>